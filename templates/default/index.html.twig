{% extends 'base.html.twig' %}

{% block title %}iBook - {{ "default.categorie.title" | trans }}{% endblock %}

{% block body %}
    <div class="bg-tertiary">
        <div class="container section-header no-breadcrumb">
            <h1 class="text-center mb-0">{{ "default.categorie.title" | trans }}</h1>
        </div>
    </div>
    <div class="container mt-4">
        <div class="row">
            {% for cat in categories %}
                <div class="col-lg-4">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="{{ asset('images/product-placeholder.jpeg') }}"
                             alt="{{ cat.getLabel() }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ cat.getLabel()}}</h5>
                            <p class="card-text">{{ cat.getDescription() }}</p>
                            <a href="{{ path("products") ~ "/" ~ cat.getId() }}" class="btn btn-primary">{{ "default.categorie.browseThe" | trans }} {{ cat.getLabel() }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
