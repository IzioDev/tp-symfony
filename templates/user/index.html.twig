{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="bg-tertiary">
        <div class="container section-header no-breadcrumb">
            <h1 class="text-center mb-0">{{ "default.nav.sign-in" | trans }}</h1>
        </div>
    </div>
    <div class="container mt-4">
        {% if user is not null %}
            <table class="table">
                <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                </tr>
                </tbody>
            </table>

        {% else %}
            <p>Vous n'êtes pas connecté</p>
        {% endif %}
    </div>


{% endblock %}
